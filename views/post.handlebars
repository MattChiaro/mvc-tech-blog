<div class="card m-5">
  <h5 class="card-header">{{title}}</h5>
  <div class="card-body">
    <h5 class="card-title">Posted by: {{user.username}}</h5>
    <p class="card-text">{{body}}</p>
    <ul class="list-group">
    {{#each comments as |comment|}}
        <li class="list-group-item m-1 border rounded">{{comment.body}} <b>by: {{comment.user.username}}</b></li>
        {{/each}}
    </ul>
  </div>
</div>
<div class="row d-flex align-content-center m-auto"><a href="/" class="btn btn-primary">Back to all posts</a></div>
